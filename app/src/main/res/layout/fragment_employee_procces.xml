<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".EmployeeProcces">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="24dp"
        android:background="@drawable/bg_stats_card"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Başlık -->
        <TextView
            android:id="@+id/empProcTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:text="Çalışan Bilgileri"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Başlangıç Tarihi -->
        <TextView
            android:id="@+id/dateInTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_stat_item"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Başlangıç Tarihi: "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Çalıştığı Gün Sayısı -->
        <TextView
            android:id="@+id/countDayTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_stat_item"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Çalıştığı Gün Sayısı: 0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Aldığı Toplam Harçlık -->
        <TextView
            android:id="@+id/takedMoneyTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_stat_item"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Aldığı Toplam Harçlık: 0"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="407dp"
        android:layout_height="266dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <EditText
            android:id="@+id/paymentTypeEditTxt"
            android:layout_width="337dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Harçlık Tipi Giriniz (Berber, Çarşı)"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/moneyEditTxt"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Harçlık Giriniz"
            android:inputType="numberSigned"
            android:textAlignment="center" />

        <Button
            android:id="@+id/addMoneyBut"
            android:layout_width="164dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/material_on_surface_emphasis_high_type"
            android:text="Harçlık Ekle"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cleanAllPaymentBut"
            android:layout_width="164dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/material_on_surface_emphasis_high_type"
            android:text="Harçlık Temizle"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteEmpBut"
            android:layout_width="164dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/material_on_surface_emphasis_high_type"
            android:text="Çalışanı Sil"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paymentRecycler"
            android:layout_width="match_parent"
            android:layout_height="190dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>